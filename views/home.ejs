              </div>
              <div class="w3-col m2">
                <label><i class="fa fa-search"></i> Búsqueda</label>
                <input class="w3-button w3-block w3-black" type="submit" value="Buscar">
              </div>
    </form>
    <main class="container apartments">
        <section class="grid">
            <%for ( const apartment of apartments) { %>
